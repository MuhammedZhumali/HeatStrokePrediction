<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="
                     http://www.liquibase.org/xml/ns/dbchangelog
                     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.28.xsd">

    <changeSet id="006-add-bmi-column-back" author="opir485">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="core_user"/>
            <not>
                <columnExists tableName="core_user" columnName="bmi"/>
            </not>
        </preConditions>

        <addColumn tableName="core_user">
            <column name="bmi" type="numeric(5,2)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <comment>Add BMI column back to core_user table for BMI calculation</comment>
    </changeSet>

</databaseChangeLog>